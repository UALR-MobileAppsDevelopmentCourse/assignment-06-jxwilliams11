<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DateStyle">
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="NameStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_100_</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ThumbnailTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_3</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EmailStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_100_</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>